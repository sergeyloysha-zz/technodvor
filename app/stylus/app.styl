.peoples
  margin-top 5rem

.people
  display flex
  flex-direction column
  align-items center
  padding 2rem 0

  +mediaMin(size-sm)
    align-items flex-start
    flex-direction row

  &__photo
    width 17rem

  &__src
    display block
