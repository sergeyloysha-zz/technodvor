      order 2
  .order-2
    order 2
    +mediaMin(size-md)
      order 1

.controls
  margin-bottom 2rem

  +mediaMin(size-md)
    margin-bottom 5rem

  &_offers
    margin 1.5rem 0 0 0
    padding 0 1.5rem

    +mediaMin(size-md)
      display none

  &__inner
    display flex
    align-items center
    padding 0 0 2rem 0
    border-bottom 1px solid alpha(color-main, 0.2)

.control-page
  display flex
  margin-left auto

  &__item
    position relative
