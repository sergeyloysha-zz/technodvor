  display block
  width 13rem
  height 16rem
  background-position center
  background-repeat no-repeat
  background-size 13rem 16rem
  transition transform .15s ease-out
  cursor pointer
  margin 0 auto

  +mediaMin(size-md)
    width 17rem
    height 20rem
