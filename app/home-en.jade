          li.mobile-nav__menu-item
            a.mobile-nav__menu-link.mobile-nav__menu-link_active(href="home.html") Home
          li.mobile-nav__menu-item
            a.mobile-nav__menu-link(href="about-us.html") About us
          li.mobile-nav__menu-item
            a.mobile-nav__menu-link(href="list-products.html") Products
            ul.mobile-nav__submenu
